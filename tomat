#!/bin/bash
#
# A Script to make alerts for pomodoro sessions.
#

sleep 1500 \
  && notify-send "break" \
  && sleep 3 \
  && zenity --warning --text="25 minutes passed" \
  && sleep 300 \
  && notify-send "Break over!" \
  && sleep 3 \
  && zenity --warning --text="Break is over. Time to work again!"


